[Unit]
Description=goproxy-vps-auth

[Service]
Type=simple
ExecStartPre=/bin/mkdir -p /var/log/goproxy
ExecStart=/opt/goproxy-vps/goproxy-vps -addr=:443 -v=2 -logtostderr=0 -log_dir=/var/log/goproxy -pwauth
WorkingDirectory=/opt/goproxy-vps
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
